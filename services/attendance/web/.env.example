# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Configuration
ATTENDANCE_TABLE_NAME=dot-attendance
EMPLOYEES_TABLE_NAME=dot-employees
SCHEDULES_TABLE_NAME=dot-schedules
NOTIFICATIONS_TABLE_NAME=dot-notifications

# Local Development
NODE_ENV=development
DYNAMODB_LOCAL_ENDPOINT=http://localhost:8000

# Cognito Configuration (for authentication)
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id

# API Configuration
API_BASE_URL=http://localhost:3000
API_STAGE=dev

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_XRAY=false

# Organization Settings
DEFAULT_ORGANIZATION_ID=org-default
DEFAULT_TIMEZONE=Asia/Seoul

# Business Rules
LATE_THRESHOLD_MINUTES=15
EARLY_LEAVE_THRESHOLD_MINUTES=30
MIN_WORK_HOURS=8
MAX_OVERTIME_HOURS=4

# Notification Settings
ENABLE_NOTIFICATIONS=true
SES_FROM_EMAIL=noreply@your-domain.com

# Security
ENABLE_LOCATION_TRACKING=true
REQUIRE_DEVICE_VERIFICATION=false
SESSION_TIMEOUT_MINUTES=60

# Feature Flags
ENABLE_FACIAL_RECOGNITION=false
ENABLE_QR_CODE_CHECKIN=true
ENABLE_GEOFENCING=true

# Testing
TEST_EMPLOYEE_ID=test-emp-001
TEST_ORGANIZATION_ID=test-org-001