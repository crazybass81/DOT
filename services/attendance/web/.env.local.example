# Supabase Configuration
# Copy this file to .env.local and fill in your actual Supabase credentials

# Supabase Project URL
# Get this from your Supabase dashboard: Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (Public API Key)
# Get this from your Supabase dashboard: Settings > API > Project API Keys > anon public
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase Service Role Key (Private - Server-side only)
# Get this from your Supabase dashboard: Settings > API > Project API Keys > service_role
# WARNING: Keep this secret! Only use server-side, never expose to client
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Application Configuration
# Environment: development | staging | production
NODE_ENV=development

# Application Base URL
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Enable debug logging
NEXT_PUBLIC_DEBUG=true

# Test Configuration (for running tests)
# Use separate Supabase project for testing to avoid affecting production data
TEST_SUPABASE_URL=https://your-test-project-id.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-supabase-anon-key
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-supabase-service-role-key

# ID-ROLE-PAPER System Configuration
# Maximum role hierarchy level
MAX_ROLE_LEVEL=7

# Default organization type for new registrations
DEFAULT_ORG_TYPE=restaurant

# Korean business validation settings
ENABLE_BUSINESS_NUMBER_VALIDATION=true
STRICT_KOREAN_PHONE_VALIDATION=true

# File Upload Configuration
# Maximum file size for document uploads (in bytes)
MAX_UPLOAD_SIZE=10485760  # 10MB

# Allowed file types for document uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Session Configuration
# JWT token expiration time (in seconds)
JWT_EXPIRATION=3600  # 1 hour

# Refresh token expiration time (in seconds)  
REFRESH_TOKEN_EXPIRATION=2592000  # 30 days

# Performance Configuration
# Enable Next.js optimizations
NEXT_PUBLIC_ENABLE_OPTIMIZATIONS=true

# API rate limiting (requests per minute per IP)
API_RATE_LIMIT=100

# Database connection pool settings
DB_POOL_SIZE=10

# Feature Flags
# Enable specific features for testing/gradual rollout
FEATURE_FLAG_PAPER_VALIDATION=true
FEATURE_FLAG_BULK_OPERATIONS=true
FEATURE_FLAG_ADVANCED_PERMISSIONS=true
FEATURE_FLAG_REAL_TIME_UPDATES=true

# Monitoring and Analytics
# Enable error tracking
ENABLE_ERROR_TRACKING=false

# Analytics provider (google | mixpanel | custom)
ANALYTICS_PROVIDER=none

# Google Analytics ID (if using Google Analytics)
GOOGLE_ANALYTICS_ID=

# Logging Configuration
# Log level: error | warn | info | debug
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=false

# Security Configuration
# Enable CSRF protection
ENABLE_CSRF_PROTECTION=true

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# Content Security Policy mode: strict | permissive
CSP_MODE=permissive