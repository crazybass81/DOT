# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres
POSTGRES_PASSWORD=your-database-password

# Edge Functions Configuration
EDGE_FUNCTIONS_URL=https://your-project-ref.supabase.co/functions/v1

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=3600

# Application Settings
APP_ENV=development
DEBUG=false

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8100,dotattendance://

# Geofencing Settings
DEFAULT_GEOFENCE_RADIUS=100
MAX_GEOFENCE_RADIUS=500

# Business Rules
MAX_BREAK_DURATION_MINUTES=60
MIN_WORK_HOURS=8
MAX_WORK_HOURS=12
OVERTIME_THRESHOLD_MINUTES=480

# Notification Settings
ENABLE_PUSH_NOTIFICATIONS=true
FCM_SERVER_KEY=your-fcm-server-key

# Test Configuration (for development only)
TEST_EMPLOYEE_ID=00000000-0000-0000-0000-000000000001
TEST_MASTER_ADMIN_ID=00000000-0000-0000-0000-000000000002